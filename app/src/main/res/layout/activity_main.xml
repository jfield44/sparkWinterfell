<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryanweddle.winterfell.MainActivity">

    <Button
        android:id="@+id/button_main_jwt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Login with JWT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_main_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Call"
        app:layout_constraintStart_toStartOf="@+id/button_main_oauth"
        app:layout_constraintTop_toBottomOf="@+id/button_main_oauth" />

    <Button
        android:id="@+id/button_main_oauth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Login with Oauth"
        app:layout_constraintStart_toStartOf="@+id/button_main_jwt"
        app:layout_constraintTop_toBottomOf="@+id/button_main_jwt" />

    <EditText
        android:id="@+id/text_main_callee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_main_call"
        app:layout_constraintTop_toTopOf="@+id/button_main_call" />
</android.support.constraint.ConstraintLayout>
